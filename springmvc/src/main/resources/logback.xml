<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%-20(%d{yyyy-MM-dd HH:mm:ss.SSS}) %-5level %line %logger{80}.%method - %msg%n
			</pattern>
			<charset>GBK</charset> <!-- 此处设置字符集 -->
		</encoder>
	</appender>

    <appender name="info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${catalina.home}/logs/api.log</File>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.home}/logs/api.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n</pattern>
        </encoder>
    </appender>
	<appender name="debug" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${catalina.home}/logs/api.debug.log</File>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${catalina.home}/logs/api.debug.%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>
	</appender>
    <appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${catalina.home}/logs/api.error.log</File>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.home}/logs/api.error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n</pattern>
        </encoder>
    </appender>

	<logger name="org.springframework" level="ERROR" />
	<logger name="org.apache.zookeeper" level="ERROR" />
	<logger name="com.alibaba" level="WARN" />
	<logger name="com.chao.helper" level="DEBUG" />
	<logger name="org.I0Itec.zkclient" level="ERROR" />


	<root level="INFO">
        <appender-ref ref="STDOUT" />
		<appender-ref ref="info" />
		<appender-ref ref="debug" />
		<appender-ref ref="error" />
	</root>
</configuration>